includes:
  - phpstan-baseline.neon

parameters:
  level: 5
  paths:
    - src
    - lib
    - bin
    - tests
  bootstrapFiles:
    - tests/bootstrap.php
  ignoreErrors:
    -
      message: "#^Class Lkrms\\\\[^\\s]+ not found\\.$#"
      path: src/Util/Legacy.php
    -
      message: "#^Closure invoked with [12] parameters?, 0 required\\.$#"
      path: src/Core/Support/ClosureBuilder.php
