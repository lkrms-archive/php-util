{
    "name": "lkrms/util",
    "type": "library",
    "license": "MIT",
    "description": "A PHP toolkit with opinionated defaults and a small footprint",
    "require": {
        "php": ">=7.2",
        "composer-runtime-api": "^2.2",
        "psr/log": "^1.1",
        "lkrms/dice": "^4.0.3.1",
        "filp/whoops": "^2.14"
    },
    "require-dev": {
        "analog/analog": "^1.0",
        "phpstan/phpstan": "^1.5"
    },
    "suggest": {
        "analog/analog": "Log console output to Analog"
    },
    "autoload": {
        "psr-4": {
            "Lkrms\\": "src/"
        }
    },
    "bin": [
        "bin/lk-util"
    ]
}
