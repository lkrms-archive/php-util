{
    "name": "lkrms/util",
    "type": "library",
    "license": "MIT",
    "description": "A PHP toolkit with opinionated defaults and a small footprint",
    "require": {
        "php": ">=7.4,<8.2",
        "composer-runtime-api": "^2.2",
        "adodb/adodb-php": "^5.22",
        "filp/whoops": "^2",
        "lkrms/dice": "^4.0.3.1",
        "psr/container": "^2",
        "psr/log": "^1"
    },
    "require-dev": {
        "analog/analog": "^1",
        "phpstan/extension-installer": "^1",
        "phpstan/phpstan": "^1",
        "phpstan/phpstan-deprecation-rules": "^1",
        "phpunit/phpunit": "^9"
    },
    "suggest": {
        "analog/analog": "Log console output to Analog"
    },
    "autoload": {
        "psr-4": {
            "Lkrms\\": "src/"
        }
    },
    "bin": [
        "bin/lk-util"
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
